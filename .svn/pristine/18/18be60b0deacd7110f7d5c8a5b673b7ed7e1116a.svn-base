// 登录状态管理
import Vue from 'vue'
import Vuex from 'vuex'
// 告诉 vue “使用” vuex
Vue.use(Vuex)

const store = new Vuex.Store({
    state: {	//全局变量定义处
        /**
         * 是否需要强制登录,是
         */
        forcedLogin: false,
        hasLogin: false,
        userInfo: ""
    },
    mutations: {	//全局方法定义处
        login(state, userInfo) {
            state.userInfo = userInfo || '新用户';
            state.hasLogin = true;
			uni.setStorage({   //把用户信息保存到本地缓存
				key: "userInfo",
				data: userInfo || '新用户'
			})
        },
        logout(state) {
            state.userInfo = "";
            state.hasLogin = false;
			uni.removeStorage({
				key: "userInfo"
			})
        }
    },
})

export default store
