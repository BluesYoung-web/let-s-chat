<template>
	<view>
		<view class="">
			<text class="pre-86">+86</text>
			<input class="width-750 height-100 bg-fff pd-lt100" 
			v-model="newPhone" type="number" maxlength="11"
			placeholder-class="color-ccc" placeholder="请填写新手机号"/>
		</view>
	</view>
</template>

<script>
	// 存储用户信息
	import {mapState,mapMutations} from 'vuex';
	// 缓存管理
	import service from '@/service.js';
	// 请求抽离
	import request from '@/request/request.js';
	export default {
		data() {
			return {
				newPhone:'',
				account:'',
				name :'',
				motto:'',
				avatarUrl:'',
				wxId:''
			}
		},
		onShow() {
			// 接收上个页面传过来的参数
			let userInfo = this.userInfo;
			this.account = userInfo.account;
			this.name = userInfo.name;
			this.avatarUrl = userInfo.avatarUrl;
			this.motto = userInfo.motto;
			this.wxId = userInfo.wxId;
		},
		// 监听下一步按钮的点击事件
		onNavigationBarButtonTap(e){
			this.phoneChange();
		},
		methods: {
			// 存储用户信息的方法
			...mapMutations(['setInfo']),
			// 确认修改手机号
			phoneChange(){
				let newPhone=this.newPhone;
				let myreg = /^(0|86|17951)?(13[0-9]|15[012356789]|166|17[3678]|18[0-9]|14[57])[0-9]{8}$/;
				if (!myreg.test(newPhone)) {
					uni.showToast({
						icon: 'none',
						title: '请输入有效手机号！',
					})
				} else{
					uni.showLoading({
						title: '加载中',
						mask:true,
					});
					// 信息修改完毕，提交给服务器存入数据库
					request.changePhone((data)=>{
						if(data==1){
							uni.showToast({
								icon: 'none',
								title: '手机号更改成功！',
							});
							uni.navigateTo({
								url:"bindSuccessful"
							});
							// 将存入数据库的信息存入到state和缓存
							let temp={
								account:this.account,
								phone:this.phone,
								name:this.name,
								avatarUrl:this.avatarUrl,
								motto:this.motto,
								wxId:this.wxId
							};
							this.setInfo(temp);
							service.addUser(temp);
						}else{
							uni.showToast({
								icon: 'none',
								title: '手机号绑定失败,该手机号已经被绑定！',
							})
						}
					},(err)=>{},(complete)=>{
						uni.hideLoading();
					},newPhone);
				}
			}
		},
		computed:{
			...mapState(['userInfo','serverUrl'])
		}
	}
</script>

<style>
	page{
		background-color: #EDF0F2;
	}
	.pre-86{
		position: absolute;
		float: left;
		top: 25upx;
		left: 10upx;
	}
